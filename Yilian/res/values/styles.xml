<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
        <style name="AppNoAnimalTheme" parent="@android:style/Theme">
        <item name="android:windowNoTitle">true</item>
        <!-- 设置没有标题 -->
        <item name="android:windowAnimationStyle">@null</item>
    </style>
    <style name="top_but">
        <item name="android:textColor">#000</item>
        <item name="android:textSize">22sp</item>
        <item name="android:onClick">topClick</item>
        <item name="android:clickable">true</item>
    </style>
    <style name="wmtRatingBar" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/wmt_ratingbar</item>
        <item name="android:minHeight">40dp</item>
        <item name="android:maxHeight">50dp</item>
    </style>
    
</resources>
