<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:gravity="center_horizontal"
    android:orientation="vertical" >

    <include
        android:id="@+id/top_bar"
        layout="@layout/activity_top" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginRight="2dp"
        android:layout_marginTop="5dp" >


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:orientation="vertical" >

            <RadioGroup
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:background="@android:color/transparent"
                android:gravity="center_vertical|center_horizontal"
                android:orientation="horizontal" >

                <RadioButton
                    android:id="@+id/radio_zh"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/tab1_radio"
                    android:button="@null"
                    android:checked="true"
                    android:gravity="center"
                    android:text="综合"
                    android:textColor="@drawable/radio_color_select" />

                <RadioButton
                    android:id="@+id/radio_xl"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/tab1_radio"
                    android:button="@null"
                    android:gravity="center"
                    android:text="销量"
                    android:textColor="@drawable/radio_color_select" />

                <RadioButton
                    android:id="@+id/radio_jg"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/tab1_radio"
                    android:button="@null"
                    android:gravity="center"
                    android:paddingRight="4dp"
                    android:text="价格"
                    android:drawableRight="@drawable/ic_jg0"
                    android:textColor="@drawable/radio_color_select" />

                <RadioButton
                    android:id="@+id/radio_jl"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/tab1_radio"
                    android:button="@null"
                    android:gravity="center"
                    android:text="距离"
                    android:textColor="@drawable/radio_color_select" />
            </RadioGroup>
             <com.haili.living.view.XListView
		        android:id="@+id/mlistview"
		        android:layout_width="match_parent"
		        android:layout_height="0dip"
		        android:layout_weight="5"
		        android:divider="#fff" 
		        android:dividerHeight="10dp"
		        >
		    </com.haili.living.view.XListView>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>